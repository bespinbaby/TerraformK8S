resource "aws_security_group" "db" {
  description = "Allow MYSQL inbound traffic"
  vpc_id      = aws_vpc.vpc.id


  ingress {
    description = "HTTP MySQL VPC"
    from_port   = 3306
    to_port     = 3306
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "allow_mysql"
  }
}

